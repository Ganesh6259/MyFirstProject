<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F5F7FA">

    <TextView
        android:id="@+id/tvOtpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#2D3748"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvOtpSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the 4-digit code sent to your phone number"
        android:textSize="16sp"
        android:textColor="#718096"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvOtpTitle" />

    <LinearLayout
        android:id="@+id/llPhoneInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvOtpSubtitle"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvPhoneDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91 1234567890"
            android:textStyle="bold"
            android:textColor="#2D3748" />

        <TextView
            android:id="@+id/tvEditPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Edit"
            android:textColor="@color/design_default_color_primary"
            android:textStyle="bold"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llOtpContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/llPhoneInfo">

        <EditText
            android:id="@+id/etOtp1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/bg_otp_box"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etOtp2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/bg_otp_box"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etOtp3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/bg_otp_box"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etOtp4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/bg_otp_box"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVerify"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Verify OTP"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/llOtpContainer" />

    <TextView
        android:id="@+id/tvResend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Didn't receive code? Resend"
        android:textColor="@color/design_default_color_primary"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnVerify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>