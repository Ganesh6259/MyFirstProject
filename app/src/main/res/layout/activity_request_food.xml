<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvRequestTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Food Support"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etRequesterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Name / Orphanage Name"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvRequestTitle" />

    <EditText
        android:id="@+id/etLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/etRequesterName" />

    <View
        android:id="@+id/dividerReq"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etLocation" />

    <EditText
        android:id="@+id/etReqItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Food Needed"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/etReqItemQty"
        app:layout_constraintTop_toBottomOf="@id/dividerReq"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/etReqItemQty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Qty"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/etReqItemName"
        app:layout_constraintEnd_toStartOf="@id/btnAddReqItem"
        app:layout_constraintTop_toTopOf="@id/etReqItemName" />

    <Button
        android:id="@+id/btnAddReqItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/etReqItemName" />

    <TextView
        android:id="@+id/tvReqItemsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Requested Items:"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etReqItemName"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvAddedReqItems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:text="No items added yet"
        android:padding="8dp"
        android:background="#F0F0F0"
        app:layout_constraintTop_toBottomOf="@id/tvReqItemsLabel"
        app:layout_constraintBottom_toTopOf="@id/btnSubmitRequest"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnSubmitRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit All Requests"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>