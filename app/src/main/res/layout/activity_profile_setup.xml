<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvProfileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complete Your Profile"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etProfileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name / Organization Name"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvProfileTitle" />

        <EditText
            android:id="@+id/etProfileContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            android:inputType="phone"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/etProfileName" />

        <EditText
            android:id="@+id/etProfileAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Default Address"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/etProfileContact" />

        <!-- Role Specific Fields -->
        <EditText
            android:id="@+id/etOrphanageCapacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number of members in orphanage"
            android:inputType="number"
            android:visibility="gone"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/etProfileAddress" />

        <EditText
            android:id="@+id/etRestaurantFoodType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type of food (e.g. Veg, Non-Veg)"
            android:visibility="gone"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/etOrphanageCapacity" />

        <EditText
            android:id="@+id/etOrgType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Organization Type (e.g. NGO, Private)"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/etRestaurantFoodType" />

        <EditText
            android:id="@+id/etProfileNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Additional Notes"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/etOrgType" />

        <Button
            android:id="@+id/btnSaveProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save and Enter Dashboard"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/etProfileNotes" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>