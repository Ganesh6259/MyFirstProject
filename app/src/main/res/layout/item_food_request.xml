<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvReqOrphanageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Orphanage Name" />

        <TextView
            android:id="@+id/tvReqFoodType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Type: Veg" />

        <TextView
            android:id="@+id/tvReqQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Quantity: For 50 children" />

        <TextView
            android:id="@+id/tvReqLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Location: XYZ Street"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvReqStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Status: Pending"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="italic" />

        <LinearLayout
            android:id="@+id/layoutActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="end"
            android:visibility="gone">

            <Button
                android:id="@+id/btnDeny"
                style="?attr/materialButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deny"
                android:textColor="@android:color/white"
                app:backgroundTint="@android:color/holo_red_dark"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnAccept"
                style="?attr/materialButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept"
                app:backgroundTint="@android:color/holo_green_dark"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>