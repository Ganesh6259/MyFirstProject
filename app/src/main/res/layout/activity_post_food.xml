<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvPostTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Excess Food"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etDonorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name / Restaurant Name"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvPostTitle" />

    <EditText
        android:id="@+id/etAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pickup Address"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/etDonorName" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etAddress" />

    <EditText
        android:id="@+id/etItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Food Item"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/etItemQty"
        app:layout_constraintTop_toBottomOf="@id/divider"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/etItemQty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Qty"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/etItemName"
        app:layout_constraintEnd_toStartOf="@id/btnAddItem"
        app:layout_constraintTop_toTopOf="@id/etItemName" />

    <Button
        android:id="@+id/btnAddItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/etItemName" />

    <TextView
        android:id="@+id/tvItemsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Items to Post:"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etItemName"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvAddedItems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:text="No items added yet"
        android:padding="8dp"
        android:background="#F0F0F0"
        app:layout_constraintTop_toBottomOf="@id/tvItemsLabel"
        app:layout_constraintBottom_toTopOf="@id/btnSubmitPost"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnSubmitPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit All Items"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>