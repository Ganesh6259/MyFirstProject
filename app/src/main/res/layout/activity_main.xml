<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Role"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/btnRestaurant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Restaurant"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnOrphanage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Orphanage"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnRestaurant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnDonor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Individual Donor"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnOrphanage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnNeedy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Needed Individual"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnDonor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnDelivery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Delivery Boy"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnNeedy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>