<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvDonorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Individual Donor Dashboard"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnDonateSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Donate Excess Food"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvDonorTitle" />

    <TextView
        android:id="@+id/tvPastDonations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Donation History"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btnDonateSmall"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDonorHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintHeight_max="200dp"
        app:layout_constraintTop_toBottomOf="@id/tvPastDonations"
        app:layout_constraintBottom_toTopOf="@id/tvOrphanageRequestsDonor"
        app:layout_constraintVertical_chainStyle="packed"
        tools:listitem="@layout/item_food_donation" />

    <TextView
        android:id="@+id/tvOrphanageRequestsDonor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orphanage Requests"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/rvDonorHistory"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOrphanageRequestsDonor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvOrphanageRequestsDonor"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_food_request" />

</androidx.constraintlayout.widget.ConstraintLayout>