<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Restaurant Dashboard"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_more_vert_white"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnDonateFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Excess Food Donation"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvActiveDonations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Active Donations"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/btnDonateFood"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRestaurantDonations"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintHeight_max="200dp"
            app:layout_constraintTop_toBottomOf="@id/tvActiveDonations"
            app:layout_constraintBottom_toTopOf="@id/tvOrphanageRequests"
            app:layout_constraintVertical_chainStyle="packed"
            tools:listitem="@layout/item_food_donation" />

        <TextView
            android:id="@+id/tvOrphanageRequests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orphanage Requests"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/rvRestaurantDonations"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvOrphanageRequests"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvOrphanageRequests"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/item_food_request" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>